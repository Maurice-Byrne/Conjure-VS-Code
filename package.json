{
  "name": "conjure-vs-code",
  "displayName": "conjure-vs-code",
  "main": "./out/extension",
  "description": "VS Code extension for conjure",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:essence"
  ],
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./"
  },
  "contributes": {
    "commands": [
    ],
    "languages": [
      {
        "id": "essence",
        "aliases": [
          "Essence",
          "essence"
        ],
        "extensions": [
          ".essence",
          ".param",
          ".solution"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "essence",
        "scopeName": "source.essence",
        "path": "./syntaxes/essence.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[essence]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "semanticTokenScopes": [
      {
        "language": "essence",
        "scopes": {
          "type.defaultLibrary": [
            "storage.type"
          ],
          "macro": [
            "keyword.other.unit"
          ],
          "regexp": [
            "constant.language.bool"
          ],
          "modifier": [
            "emphasis",
            "storage.type"
          ],
          "*.readonly": [
            "emphasis"
          ],
          "*.abstract": [
            "strong"
          ]
        }
      }
    ]
  },
  "dependencies": {
    "compare-versions": "^5.0.1",
    "vscode": "^1.1.34",
    "vscode-languageclient": "^8.0.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/vscode": "^1.73.0",
    "typescript": "^4.9.4"
  }
}
